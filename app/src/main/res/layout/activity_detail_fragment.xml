<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cardDetail.DetailActivityFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:translationZ="0.1dp"
        android:background="@color/toolbarcolor">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarCardDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detailedgradient">

            <ImageView
                android:id="@+id/share"
                android:layout_width="31dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/share" />

            <ImageView
                android:id="@+id/likeWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/like" />

        </androidx.appcompat.widget.Toolbar>

<!--        android:layout_height="?attr/actionBarSize"-->

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_detail_activity_fragment" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>