<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.categoryview.category_page">


    <androidx.cardview.widget.CardView
        android:id="@+id/likes_list"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:paddingBottom="20dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/like_business_image_category"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="170dp">

        </ImageView>

        <RatingBar
            android:id="@+id/like_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="215dp"
            android:numStars="5"
            android:paddingBottom="20dp"
            android:rating="4"
            android:stepSize="0.1"></RatingBar>

        <TextView
            android:id="@+id/like_companyName"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="18dp"
            android:textFontWeight="600"
            android:letterSpacing="0.1"
            android:textColor="#000000"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="35dp">

        </TextView>

        <TextView
            android:id="@+id/like_tagline_category"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="235dp"
            android:layout_marginBottom="40dp"
            android:textSize="16dp"
            ></TextView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

