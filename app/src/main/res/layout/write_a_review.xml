<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write a Review"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="14dp"
        android:layout_marginLeft="140dp"
        android:textStyle="bold"/>

        <ImageView
            android:id="@+id/crossReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="85dp"
            android:src="@drawable/ic_close_black_24dp"/>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/recommendationCard"
        android:layout_width="300dp"
        android:layout_height="147dp"
        android:layout_marginLeft="52dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        android:textAlignment="center"
        app:cardUseCompatPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="45dp"
            android:text="How would you rate this service?"
            android:textSize="16dp"
            android:textAlignment="center"/>

        <RatingBar
            android:id="@+id/write_a_review_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"
            android:numStars="5" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave a comment"
        android:textColor="#8b8a8a"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/commentSection"
        android:layout_width="300dp"
        android:layout_height="100dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="2000"
            android:maxLines="4"
            android:hint="Excellent services...." />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="52dp"
        android:background="@drawable/btn_stroke_width"
        android:text="Submit"/>

    <TextView
        android:id="@+id/ratingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>