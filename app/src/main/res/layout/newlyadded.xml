<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/newly_added_linearlayout"
  >

    <androidx.cardview.widget.CardView
        android:id="@+id/business_card"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="false"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:id="@+id/biz_img">

        </ImageView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/circularimage"
            android:src="@drawable/profile_pic_default"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/business_name"
            android:textSize="18dp"
            android:textFontWeight="600"
            android:letterSpacing="0.1"
            android:textColor="#000000"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="65dp"
            android:text="Rebel Electronics">

        </TextView>

        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="215dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1"
            android:rating="4"
            android:paddingBottom="20dp"></RatingBar>

    </androidx.cardview.widget.CardView>



</LinearLayout>